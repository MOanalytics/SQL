SELECT AVG(hero_fighting_skills) FROM (SELECT name, fighting_skills AS "hero_fighting_skills" FROM marvels WHERE alignment = "Good" ORDER BY fighting_skills);

SELECT AVG(villian_fighting_skills) FROM (SELECT name, fighting_skills AS "villian_fighting_skills" FROM marvels WHERE alignment = "Bad" ORDER BY fighting_skills);

SELECT MIN(fighting_skills), MAX(fighting_skills), ROUND( AVG(fighting_skills)) AS "avg_fighting_skills" FROM marvels; 

SELECT name, MAX(popularity), alignment FROM marvels  GROUP BY alignment;

SELECT alignment, ROUND(AVG(popularity)) AS "avg_popularity" FROM marvels GROUP BY alignment HAVING avg_popularity >10 ORDER BY avg_popularity; 

SELECT name, strength,
CASE
WHEN strength > 6 THEN "very_strong"
WHEN strength > 4 THEN "strong"
WHEN strength > 3 THEN "weak"
ELSE "very_weak"
END as "strength_level"
FROM marvels
ORDER BY strength;

SELECT name FROM marvels WHERE intelligence >5 AND durability >5;

SELECT name FROM marvels WHERE speed >7 OR energy_projection >6;
